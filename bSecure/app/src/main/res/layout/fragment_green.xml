<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <ImageButton
        android:id="@+id/imggreen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="40dp"
         android:layout_gravity="center"
        android:background="@drawable/greenicon"/>

    <Button
        android:id="@+id/btnabtgrn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/gabt" />

    <Button
        android:id="@+id/btnsettinggrn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/gstng" />

    <Button
        android:id="@+id/btnhomegrn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|left"
        android:background="@drawable/icon_home_select" />

    <TextView
        android:id="@+id/txtgreenabt"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/greenabout"
        android:visibility="invisible"
        android:textAppearance="@android:style/TextAppearance"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:textSize="18sp"
        android:lineSpacingExtra="8sp"
        android:textStyle="normal|italic"
        android:textAlignment="textStart" />

</FrameLayout>