<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bSecure"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/page"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.bSecure.MainSplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name="com.bSecure.WidgetActivity" >
            <intent-filter >
                <action
                    android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widgetprovide" />
        </receiver>

        <receiver
            android:name="com.bSecure.WidgetReceiver"
            android:label="bSecure" >
            <intent-filter>
                <action android:name="CHANGE_PICTUREG" />
            </intent-filter>

            <intent-filter>
                <action android:name="CHANGE_PICTUREY" />
            </intent-filter>
            <intent-filter>
                <action android:name="CHANGE_PICTURER" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widgetprovide" />
        </receiver>

        <activity android:name="com.bSecure.WidgetSettings"></activity>
        <activity android:name="com.bSecure.UserRegistration"></activity>
        <activity android:name="com.bSecure.ApplicationSettings"></activity>
        <service android:name="com.bSecure.MessageSender"></service>
        <service android:name="com.bSecure.AudioRecorder"></service>
        <service android:name="com.bSecure.ShakeWakeupService"></service>
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
    </application>

</manifest>
